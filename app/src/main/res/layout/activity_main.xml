        android:backgroundTint="#E5E5E5"
        android:foregroundGravity="left|center"
        android:text="59 kcal"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50px"
        app:icon="@drawable/vector2"
        app:iconTint="#071E94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/button4"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="348dp"
        android:backgroundTint="#E5E5E5"
        android:foregroundGravity="left|center"
        android:text="30 min"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50px"
        app:icon="@drawable/vector3"
        app:iconTint="#071E94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="436dp"
        android:backgroundTint="#E5E5E5"
        android:foregroundGravity="left|center"
        android:text="1583 steps"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="50px"
        app:icon="@drawable/vector4"
        app:iconTint="#071E94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button7"
        android:layout_width="183dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="548dp"
        android:backgroundTint="#E5E5E5"
        android:gravity="right|top"
        android:outlineSpotShadowColor="#E5E5E5"
        android:text="62 kg"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:cornerRadius="0px"
        app:iconTint="#071E94"
        app:icon="@drawable/vector5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="183dp"
        android:layout_height="94dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="548dp"
        android:backgroundTint="#E5E5E5"
        android:gravity="right|top"

        android:outlineSpotShadowColor="#E5E5E5"
        android:text="82 bmp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:iconTint="#790303"
        app:cornerRadius="0px"
        app:icon="@drawable/vector6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="190dp"

        android:layout_height="100dp"
        android:backgroundTint="#E5E5E5"
        app:srcCompat="@drawable/_528474303176360636_1"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="626dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="190dp"

        android:layout_height="100dp"
        android:backgroundTint="#E5E5E5"
        app:srcCompat="@drawable/_528474303176360636_1"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="626dp" />


</androidx.constraintlayout.widget.ConstraintLayout>